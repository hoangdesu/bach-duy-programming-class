{
  "openapi": "3.0.0",
  "info": {
    "title": "Example API in JSON file",
    "description": "A simple example API for demonstration purposes.",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:4567/docs",
      "description": "Local development server"
    }
  ],
  "paths": {
    "/api/v1/agents": {
      "get": {
        "summary": "Get all agents",
        "description": "Retrieves a list of all registered users.",
        "responses": {
          "200": {
            "description": "A list of users",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/User"
                  }
                },
                "examples": {
                  "usersList": {
                    "summary": "Example user list",
                    "value": [
                      {
                        "id": 1,
                        "name": "John Doe",
                        "email": "john.doe@example.com"
                      },
                      {
                        "id": 2,
                        "name": "Jane Smith",
                        "email": "jane.smith@example.com"
                      }
                    ]
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/weapons": {
      "post": {
        "summary": "Get all weapons",
        "description": "Retrieves a list of all registered users.",
        "responses": {
          "200": {
            "description": "A list of users",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/User"
                  }
                },
                "examples": {
                  "usersList": {
                    "summary": "Example user list",
                    "value": [
                      {
                        "id": 1,
                        "name": "John Doe",
                        "email": "john.doe@example.com"
                      },
                      {
                        "id": 2,
                        "name": "Jane Smith",
                        "email": "jane.smith@example.com"
                      }
                    ]
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64",
            "description": "The unique identifier of the user."
          },
          "name": {
            "type": "string",
            "description": "The full name of the user."
          },
          "email": {
            "type": "string",
            "format": "email",
            "description": "The email address of the user."
          }
        },
        "required": ["id", "name", "email"]
      }
    }
  }
}